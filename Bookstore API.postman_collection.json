							"listen": "test",
							"script": {
								"exec": [
									"// TEST SCRIPT #2: Login Response Validation & Token Storage",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response contains accessToken', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('accessToken');",
									"    pm.expect(jsonData.accessToken).to.be.a('string');",
									"    pm.expect(jsonData.accessToken.length).to.be.above(10);",
									"});",
									"",
									"pm.test('Response contains refreshToken', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('refreshToken');",
									"});",
									"",
									"pm.test('Token type is Bearer', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.tokenType).to.eql('Bearer');",
									"});",
									"",
									"pm.test('User info is returned', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('user');",
									"    pm.expect(jsonData.user).to.have.property('id');",
									"    pm.expect(jsonData.user).to.have.property('email');",
									"    pm.expect(jsonData.user).to.have.property('role');",
									"});",
									"",
									"// Store tokens for subsequent requests",
									"var jsonData = pm.response.json();",
									"if (jsonData.accessToken) {",
									"    pm.collectionVariables.set('accessToken', jsonData.accessToken);",
									"    pm.collectionVariables.set('refreshToken', jsonData.refreshToken);",
									"    console.log('Tokens stored successfully');",
									"}"
